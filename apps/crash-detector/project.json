{
    "name": "crash-detector",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/crash-detector",
    "projectType": "application",
    "tags": [
        "type:app",
        "scope:dashboard"
    ],
    "targets": {
        "build": {
            "executor": "@nx/web:webpack",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/apps/crash-detector",
                "index": "apps/crash-detector/index.html",
                "main": "apps/crash-detector/app.js",
                "tsConfig": "apps/crash-detector/tsconfig.app.json",
                "assets": [
                    "apps/crash-detector/manifest.json",
                    "apps/crash-detector/service-worker.js",
                    "apps/crash-detector/styles.css",
                    "apps/crash-detector/icons"
                ]
            }
        },
        "serve": {
            "executor": "@nx/web:dev-server",
            "options": {
                "buildTarget": "crash-detector:build",
                "port": 4201
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "command": "gh-pages -d dist/apps/crash-detector -r https://github.com/yourusername/crash-detector.git"
            }
        }
    },
    "implicitDependencies": [
        "shared-keys",
        "shared-pwa",
        "data-layer"
    ]
}